<!-- loop and display -->
<h1>My Tasks</h1>

<% @tasks.each do |t| %>
  <!-- input tag -->
  <!-- type checkbox and task id -->
  <%= link_to t.title, task_path(t) %>
  <%= link_to "Edit", edit_task_path(t) %>
  <%= link_to "Delete", task_path(t), method: 'DELETE' %><br>
<% end %>

<%= link_to "Add a task", tasks_new_path %>
